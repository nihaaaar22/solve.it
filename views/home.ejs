<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">   
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <header>
        <div class="logo">
            <a href="/"><h4>Solve.it</h4></a>
          </div>
        <div class="container">
            
          
          <div class="dropdown">
            <button class="dropbtn">India</button>
            <div class="dropdown-content">
              <a href="#">Pune</a>
              <a href="#">Mumbai</a>
              <a href="#">Pimpri Chinchwad</a>
            </div>
          </div>
        
          <div class="searchbar">
            <input type="text" placeholder="Search...">
          </div>
          <div class="login">
            <a href="/login.html">Login</a>
          </div>
        </div>
      </header>
      <section class="content row">

      <section class="featured col-3">
        <h2 class="fheading">
            Featured
        </h2>
        <h5 class="feature">Rods</h5>
        <h5 class="feature">Traffic</h5>
        <h5 class="feature">Economy</h5>
        <h5 class="feature">Safety</h5>
        <h5 class="feature">Sewage</h5>
        <h5 class="feature">Water Scarcity</h5>



      </section>

      <section class="feed col-6">
        
          <% if(post.length>0){  %>
            <%post.forEach((post)=>{%>
              <div class="post">
                <div class="post-header">
                  <span class="username"><%= post.Username %></span>
                  <span class="location"><%= post.Location %></span>
                  <span class="time"><%= post.Time %></span>
                </div>
                <div class="post-content">
                  <p><%= post.Text %></p>
                </div>
        
            </div>

            <% }) %>

            <% } %>
          
      </section>

    </section>
      



      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
      <script src="/main.js"></script>
    
</body>
</html>